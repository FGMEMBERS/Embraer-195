			<layout>vbox</layout>
			<halign>left</halign>
			<valign>top</valign>
			<text>
				<label>Partida</label>
			</text>

			<checkbox>
				<halign>left</halign>
				<label>Speech - Embarque</label>
				<property>/controls/messages/embarque</property>
				<binding>
					<command>property-toggle</command>
					<property>/controls/messages/embarque</property>
				</binding>
				<binding>
					<command>property-toggle</command>
					<property>/sim/sound/switch</property>
				</binding>
			</checkbox>

			<checkbox>
				<halign>left</halign>
				<label>Speech  Equipamento Eletronico</label>
				<property>/controls/messages/eqpeletr</property>
