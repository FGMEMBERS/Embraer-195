	</group>
	
	<!-- Grupo Geral 2 -->
	<group>
		<layout>hbox</layout>
		<halign>center</halign>
		<valign>top</valign>

		<!-- Bloco Aterrissagem -->
		<group>
			<layout>vbox</layout>
			<halign>left</halign>
			<valign>top</valign>

			<text>
				<label>Chegada</label>
			</text>

			<checkbox>
