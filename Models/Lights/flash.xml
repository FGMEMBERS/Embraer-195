<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <path>flash.ac</path>
  <animation>
    <type>noshadow</type>
    <object-name>flash</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>flash</object-name>
    <spherical type="bool">true</spherical>
  </animation>

  <animation>
    <type>select</type>
    <object-name>flash</object-name>
    <condition>
      <and>
	      <property>/sim/model/lights/strobe/state</property>
	      <property>controls/lighting/strobe</property>
      </and>
    </condition>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>flash</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>2</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>20</dep>
      </entry>
      <entry>
        <ind>3500</ind>
        <dep>25</dep>
      </entry>
      <entry>
        <ind>20500</ind>
        <dep>25</dep>
      </entry>
    </interpolation>
  </animation>

</PropertyList>
