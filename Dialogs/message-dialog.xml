				</binding>
				<binding>
					<command>property-toggle</command>
					<property>/sim/sound/switch</property>
				</binding>
			</checkbox>

		</group>

		<!-- Bloco No Ar -->
		<group>
			<layout>vbox</layout>
			<halign>left</halign>
			<valign>top</valign>

			<text>
				<label>No Ar</label>
			</text>
			
