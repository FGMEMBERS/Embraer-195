					<property>/sim/sound/switch</property>
				</binding>
			</checkbox>

			<checkbox>
				<halign>left</halign>
				<label>Speech  Apos fechamento da porta principal</label>
				<property>/controls/messages/fecharportas</property>
				<binding>
					<command>property-toggle</command>
					<property>/controls/messages/fecharportas</property>
				</binding>
				<binding>
					<command>property-toggle</command>
					<property>/sim/sound/switch</property>
				</binding>
			</checkbox>
			
			<checkbox>
				<halign>left</halign>
				<label>Speech Chefe de Cabine</label>
				<property>/controls/messages/instrsegur</property>
				<binding>
					<command>property-toggle</command>
					<property>/controls/messages/fecharportas</property>
				</binding>
				<binding>
