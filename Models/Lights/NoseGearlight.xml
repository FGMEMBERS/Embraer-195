<animation>
	<type>noshadow</type>
	<object-name>Llight1</object-name>
</animation>

<animation>
	<type>alpha-test</type>
	<alpha-factor>0.01</alpha-factor>
</animation>

<animation>
	<type>dist-scale</type>
	<object-name>Llight1</object-name>
	<interpolation>
		<entry><ind>0</ind><dep>1</dep></entry>
		<entry><ind>20</ind><dep>3</dep></entry>
		<entry><ind>1500</ind><dep>20</dep></entry>
		<entry><ind>3500</ind><dep>25</dep></entry>
		<entry><ind>13500</ind><dep>25</dep></entry>
	</interpolation>
</animation>

  <animation>
    <type>select</type>
    <object-name>Llight1</object-name>
    <condition>
    	<and>
    		<property>/controls/lighting/landing-lights</property>
    		<not>
				<property>/sim/crashed</property>
    		</not>
    	<greater-than>
			<property>/gear/gear[0]/position-norm</property>
			<value>0.75</value>
		</greater-than>
    	</and>
    </condition>
  </animation>

</PropertyList>
