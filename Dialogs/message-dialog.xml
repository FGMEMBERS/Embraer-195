<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

	<name>messagecontrol</name>
	<layout>vbox</layout>



	<text>
		<label>Onboard Message</label>
		<valign>center</valign>
		<halign>center</halign>
	</text>



	<hrule/>

	<!-- Grupo geral -->
	<group>
		<layout>hbox</layout>
		<halign>center</halign>
		<valign>top</valign>

		<!-- Bloco Decolagem -->
