				<arinc429>
					<decision-height-ncd>false</decision-height-ncd>
					<decision-height>200</decision-height>
				</arinc429>
			</inputs>
		</mk-viii>
		<wxradar>
			<serviceable>true</serviceable>
			<range type="int" archive="y">20</range>
